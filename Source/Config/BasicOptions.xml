<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="JournalatorConfigBasicOptionsFrame"
    mixin="JournalatorConfigBasicOptionsFrameMixin"
    parent="InterfaceOptionsFrame">

    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
      <OnHide method="Save"/>
    </Scripts>

    <Frames>
      <Frame inherits="AuctionatorConfigurationTitleFrame" parentKey="TitleArea">
        <KeyValues>
          <KeyValue key="titleText" value="AUCTIONATOR_L_CONFIG_BASIC_OPTIONS_CATEGORY" type="global" />
          <KeyValue key="subTitleText" value="JOURNALATOR_L_CONFIG_BASIC_OPTIONS_TEXT" type="global"/>
        </KeyValues>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="TooltipSaleRate">
        <KeyValues>
          <KeyValue key="labelText" value="JOURNALATOR_L_CONFIG_TOOLTIP_SALE_RATE" type="global" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.TitleArea" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="TooltipFailures">
        <KeyValues>
          <KeyValue key="labelText" value="JOURNALATOR_L_CONFIG_TOOLTIP_FAILURES" type="global" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.TooltipSaleRate" relativePoint="BOTTOMLEFT" />
        </Anchors>
      </Frame>
   </Frames>
  </Frame>
</Ui>
