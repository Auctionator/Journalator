<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="JournalatorDisplayTemplate"
    virtual="true"
    parent="UIParent"
    mixin="JournalatorDisplayMixin"
    inherits="JournalatorPanelTemplate"
    topLevel="true"
    enableMouse="true"
    hidden="true"
  >
    <Scripts>
      <OnKeyDown method="OnKeyDown" />
      <OnKeyUp method="OnKeyUp" />

      <OnLoad method="OnLoad" />
      <OnShow method="OnShow" />
    </Scripts>

    <Anchors>
      <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
    </Anchors>

    <Frames>
      <Frame inherits="JournalatorInvoiceDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Invoices" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-20"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorPostingDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Posting" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-20"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Button parentKey="CloseDialog" inherits="UIPanelCloseButtonNoScripts">
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
        </Anchors>
        <Scripts>
          <OnClick>self:GetParent():OnCloseClicked()</OnClick>
        </Scripts>
      </Button>

<!--
     <Button parentKey="SummaryTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorSummaryTab_Button" text="Summary">
				<KeyValues>
					<KeyValue key="displayMode" value="Summary" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="20" y="-28"/>
				</Anchors>
			</Button>
-->
			<Button parentKey="InvoicesTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorInvoicesTab_Button" text="Invoices">
				<KeyValues>
					<KeyValue key="displayMode" value="Invoices" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="20" y="-28"/>
				</Anchors>
			</Button>
			<Button parentKey="PostingTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorPostingTab_Button" text="Posting">
				<KeyValues>
					<KeyValue key="displayMode" value="Posting" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.InvoicesTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>
    </Frames>

    <Layers>
      <Layer>
        <FontString text="Journalator - Display" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" y="-10"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
