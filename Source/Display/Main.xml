      <Button text="" parentKey="RunningTotalButton">
        <NormalFont style="GameFontHighlight" />
        <Anchors>
          <Anchor point="BOTTOM" y="4"/>
          <Anchor point="TOPRIGHT" relativeKey="$parent.ExportCSV" relativePoint="TOPLEFT" y="5" x="-15"/>
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent():ResetRunningTotal()
