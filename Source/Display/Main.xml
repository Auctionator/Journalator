<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="JournalatorDisplayTemplate"
    virtual="true"
    parent="UIParent"
    mixin="JournalatorDisplayMixin"
    inherits="JournalatorPanelTemplate"
    topLevel="true"
    hidden="true"
  >
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnShow method="OnShow" />
      <OnHide method="OnHide" />
    </Scripts>

    <Anchors>
      <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
    </Anchors>

    <Frames>
      <Frame inherits="JournalatorFiltersContainerTemplate" parentKey="Filters">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorInvoiceDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Invoices" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorPostingDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Posting" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorSaleRatesDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="SaleRates" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorFailuresDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Failures" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorVendoringDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Vendoring" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorInfoDisplayTemplate" parentArray="Views">
				<KeyValues>
					<KeyValue key="displayMode" value="Info" type="string"/>
				</KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-50"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

<!--
     <Button parentKey="SummaryTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorSummaryTab_Button" text="Summary">
				<KeyValues>
					<KeyValue key="displayMode" value="Summary" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="20" y="-28"/>
				</Anchors>
			</Button>
-->
			<Button parentKey="InvoicesTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorInvoicesTab_Button" text="JOURNALATOR_L_INVOICES">
				<KeyValues>
					<KeyValue key="displayMode" value="Invoices" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_INVOICES_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="20" y="-28"/>
				</Anchors>
			</Button>
			<Button parentKey="PostingTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorPostingTab_Button" text="JOURNALATOR_L_POSTING">
				<KeyValues>
					<KeyValue key="displayMode" value="Posting" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_POSTING_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.InvoicesTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>
			<Button parentKey="SaleRatesTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorSaleRatesTab_Button" text="JOURNALATOR_L_SALE_RATES">
				<KeyValues>
					<KeyValue key="displayMode" value="SaleRates" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_SALE_RATES_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.PostingTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>
			<Button parentKey="FailuresTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorFailuresTab_Button" text="JOURNALATOR_L_FAILURES">
				<KeyValues>
					<KeyValue key="displayMode" value="Failures" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_FAILURES_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.SaleRatesTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>
			<Button parentKey="VendoringTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorVendoringTab_Button" text="JOURNALATOR_L_VENDORING">
				<KeyValues>
					<KeyValue key="displayMode" value="Vendoring" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_VENDORING_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.FailuresTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>
			<Button parentKey="InfoTab" parentArray="Tabs" inherits="JournalatorTabButtonTemplate" name="JournalatorInfoTab_Button" text="JOURNALATOR_L_JOURNALATOR">
				<KeyValues>
					<KeyValue key="displayMode" value="Info" type="string"/>
					<KeyValue key="title" value="JOURNALATOR_L_INFO_TITLE" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.VendoringTab" relativePoint="RIGHT" x="-15" y="0"/>
				</Anchors>
			</Button>

      <Button inherits="UIPanelDynamicResizeButtonTemplate" text="AUCTIONATOR_L_EXPORT_RESULTS" parentKey="ExportCSV">
        <Anchors>
          <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-8" y="10"/>
        </Anchors>
        <Scripts>
          <OnClick>self:GetParent():ExportCSVClicked()</OnClick>
        </Scripts>
      </Button>

      <StatusBar parentKey="ProgressBar" frameStrata="HIGH" inherits="CastingBarFrameTemplate">
        <Size x="195" y="13"/>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
          <OnLoad>
            self.Spark:Hide();
            self.Flash:Hide();
          </OnLoad>

          <!-- Override the scripts from the template, as this behavior is not desired. (copied from Blizzard lua) -->
          <OnEvent></OnEvent>
          <OnShow></OnShow>
          <OnUpdate></OnUpdate>
          <!-- Override the scripts from the template, as this behavior is not desired. (copied from Blizzard lua) -->
        </Scripts>
      </StatusBar>
    </Frames>

    <Layers>
      <Layer>
        <FontString inherits="GameFontHighlight" parentKey="Title">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" y="-10"/>
          </Anchors>
        </FontString>

        <FontString text="Status unset" parentKey="StatusText" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" y="15" x="20"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
