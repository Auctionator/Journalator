<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="JournalatorDisplayTemplate"
    virtual="true"
    parent="UIParent"
    mixin="JournalatorDisplayMixin"
    inherits="JournalatorPanelTemplate"
    topLevel="true"
    enableMouse="true"
    hidden="true"
  >
    <Scripts>
      <OnKeyDown method="OnKeyDown" />
      <OnKeyUp method="OnKeyUp" />
    </Scripts>

    <Anchors>
      <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
    </Anchors>

    <Frames>
      <Frame inherits="JournalatorInvoiceDisplayTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-20"/>
          <Anchor point="BOTTOM" relativeKey="$parent" relativePoint="CENTER" y="10"/>
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT" x="-20"/>
        </Anchors>
      </Frame>

      <Frame inherits="JournalatorPostingDisplayTemplate">
        <Anchors>
          <Anchor point="TOP" relativeKey="$parent" relativePoint="CENTER" y="-10"/>
          <Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="20"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
        </Anchors>
      </Frame>

      <Button parentKey="CloseDialog" inherits="UIPanelCloseButtonNoScripts">
        <Anchors>
          <Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" />
        </Anchors>
        <Scripts>
          <OnClick>self:GetParent():OnCloseClicked()</OnClick>
        </Scripts>
      </Button>
    </Frames>

    <Layers>
      <Layer>
        <FontString text="Journalator - Summary" inherits="GameFontHighlight">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" y="-10"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
