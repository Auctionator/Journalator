<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="JournalatorPanelTemplate"
    virtual="true"
    movable="true"
    clampedToScreen="true"
  >
    <Size x="1200" y="500"/>
    <Scripts>
      <OnDragStart>
        self:StartMoving()
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>

		<KeyValues>
			<KeyValue key="layoutType" value="ButtonFrameTemplateNoPortrait" type="string"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-6">
				<Texture file="Interface\FrameGeneral\UI-Background-Rock" horizTile="true" vertTile="true" parentKey="Bg">
					<Anchors>
						<Anchor point="TOPLEFT" y="-5"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString inherits="GameFontNormal" parentKey="TitleText" wordwrap="false">
					<Anchors>
						<Anchor point="TOPLEFT" x="25" y="-10"/>
						<Anchor point="TOPRIGHT" x="-25" y="-5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
      <Frame parentKey="Border" inherits="AuctionatorPanelBorderTemplate"/>
		</Frames>

    <Frames>
      <Button parentKey="CloseDialog" inherits="UIPanelCloseButtonNoScripts">
        <Anchors>
          <Anchor point="TOPRIGHT"/>
        </Anchors>
        <Scripts>
          <OnClick>self:GetParent():Hide()</OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
